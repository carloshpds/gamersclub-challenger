{
  "manifest_version": 3,
  "name": "Matchmaking GC",
  "version": "0.0.1",
  "description": "__MSG_appDescription__",
  "author": "Carlos Henrique (C8) <carloshpds@gmail.com>",

  "default_locale": "pt_BR",

  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Matchmaking GC",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "*://gamersclub.com.br/*"
      ],
      "js": ["js/contentScripts.js"]
    }
  ],

  "web_accessible_resources" : [
    { "resources": ["assets/*", "content-scripts/*"], "matches": ["*://gamersclub.com.br/*"],"extensions": ["__MSG_@@extension_id__"] }

  ],

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "declarativeContent"
  ]

}