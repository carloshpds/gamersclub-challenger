{
  "manifest_version": 3,
  "name": "Gamersclub Challenger",
  "version": "0.0.1",
  "description": "__MSG_appDescription__",
  "author": "Carlos Henrique (C8) <carloshpds@gmail.com>",

  "default_locale": "pt_BR",
  "icons": {
    "16": "assets/logo_16.png",
    "48": "assets/logo_48.png",
    "128": "assets/logo_128.png"
  },

  "action": {
    "default_title": "Gamersclub Challenger",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "*://gamersclub.com.br/lobby"
      ],
      "js": ["js/chunk-vendors.js", "js/contentScripts.js"]
    }
  ],

  "web_accessible_resources" : [
    { "resources": ["assets/*", "content-scripts/*"], "matches": ["*://gamersclub.com.br/*"],"extensions": ["__MSG_@@extension_id__"] }
  ],

  "permissions": [
    "*://gamersclub.com.br/*"
  ]

}